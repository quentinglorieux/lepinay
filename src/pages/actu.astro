---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).sort((a,b)=> (a.data.date < b.data.date ? 1 : -1));
---
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Actualités</title>
  </head>
  <body>
    <Header />
    <main class="container">
      <h1>Actualités</h1>
      <div class="grid" style="grid-template-columns:repeat(3,1fr)">
        {posts.map(p => (
          <a href={`/actu/${p.data.slug}`} style="border:1px solid #eee;padding:12px">
            {p.data.cover && <img src={p.data.cover} alt={p.data.title} loading="lazy"/>}
            <h3 style="margin:10px 0 6px">{p.data.title}</h3>
            <div style="color:var(--muted);font-size:.9rem">
              {new Date(p.data.date).toLocaleDateString('fr-FR')}
            </div>
            {p.data.excerpt && <p>{p.data.excerpt}</p>}
          </a>
        ))}
      </div>
    </main>
    <Footer />
  </body>
</html>