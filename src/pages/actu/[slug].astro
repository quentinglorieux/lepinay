---
import '../styles/global.css';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const { slug } = Astro.params;
const posts = await getCollection('posts');
const post = posts.find(p=> p.data.slug === slug);
if(!post) throw new Error('Article introuvable');
---
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{post.data.title} — Actualités</title>
  </head>
  <body>
    <Header />
    <main class="container">
      <article>
        <h1>{post.data.title}</h1>
        <div style="color:var(--muted);margin-bottom:10px">
          {new Date(post.data.date).toLocaleDateString('fr-FR')}
        </div>
        {post.data.cover && <img src={post.data.cover} alt={post.data.title} />}
        <Content />
      </article>
    </main>
    <Footer />
  </body>
</html>