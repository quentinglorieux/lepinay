---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Import direct du Markdown (en tant que composant Astro)
import Page, { frontmatter } from '../content/pages/qui-sommes-nous.md';
import hero from '../content/pages/office.png';
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <title>{frontmatter.title}</title>
    <meta name="description" content={frontmatter.seo?.description || ''} />
    {frontmatter.seo?.image && <meta property="og:image" content={hero.src} />}
  </head>
  <body>
    <Header />
    <main class="container prose about">
     {frontmatter.seo?.image && (
        <img src={hero.src} alt={frontmatter.title} style="width:100%;height:auto;display:block;margin-bottom:2rem;" />
      )}
      <Page />
    </main>
    <Footer />
  </body>
</html>
